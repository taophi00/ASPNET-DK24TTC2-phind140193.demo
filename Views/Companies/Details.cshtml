@model TuyenDungViecLam.Models.Employer
@{
    ViewData["Title"] = Model.Name;
    var jobs = ViewBag.Jobs as List<TuyenDungViecLam.Models.Job>;
}

<div class="container">
    <!-- Company Header -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-2 text-center">
                    <img src="@Model.Logo" alt="@Model.Name" class="rounded" style="width: 120px; height: 120px; object-fit: cover;">
                </div>
                <div class="col-md-7">
                    <h1 class="fw-bold text-primary">@Model.Name</h1>
                    <p class="text-muted mb-2">@Model.Industry</p>
                    <p class="mb-3">@Model.Description</p>
                    
                    <div class="d-flex flex-wrap gap-2">
                        <span class="badge bg-light text-dark">
                            <i class="fas fa-users"></i> @Model.Size
                        </span>
                        <span class="badge bg-primary">
                            <i class="fas fa-briefcase"></i> @Model.Jobs.Count việc làm
                        </span>
                        <span class="badge bg-success">
                            <i class="fas fa-map-marker-alt"></i> @Model.Address
                        </span>
                    </div>
                </div>
                <div class="col-md-3 text-end">
                    @if (!string.IsNullOrEmpty(Model.Website))
                    {
                        <a href="@Model.Website" target="_blank" class="btn btn-outline-primary mb-2 w-100">
                            <i class="fas fa-globe"></i> Website
                        </a>
                    }
                    <button class="btn btn-primary w-100">
                        <i class="fas fa-heart"></i> Theo dõi
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-8">
            <!-- Company Jobs -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-briefcase"></i> Việc làm đang tuyển (@(jobs?.Count ?? 0))</h5>
                </div>
                <div class="card-body">
                    @if (jobs != null && jobs.Any())
                    {
                        @foreach (var job in jobs)
                        {
                            <div class="border-bottom pb-3 mb-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="fw-bold text-primary mb-1">
                                            <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.Id" class="text-decoration-none">
                                                @job.Title
                                            </a>
                                        </h6>
                                        <p class="text-muted mb-2">@job.Description.Substring(0, Math.Min(120, job.Description.Length))...</p>
                                        <div class="d-flex flex-wrap gap-2">
                                            <span class="badge bg-light text-dark">
                                                <i class="fas fa-map-marker-alt"></i> @job.Location
                                            </span>
                                            <span class="badge bg-success">
                                                <i class="fas fa-dollar-sign"></i> @job.Salary
                                            </span>
                                            <span class="badge bg-info">@job.Type</span>
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <small class="text-muted d-block">@job.PostedDate.ToString("dd/MM/yyyy")</small>
                                        <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.Id" class="btn btn-sm btn-primary mt-2">
                                            Xem chi tiết
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-briefcase fa-2x text-muted mb-3"></i>
                            <p class="text-muted">Công ty hiện không có việc làm nào đang tuyển dụng</p>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <!-- Sidebar -->
        <div class="col-md-4">
            <!-- Contact Info -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="fas fa-address-card"></i> Thông tin liên hệ</h6>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <div class="mb-3">
                            <strong>Email:</strong><br>
                            <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.Phone))
                    {
                        <div class="mb-3">
                            <strong>Điện thoại:</strong><br>
                            <a href="tel:@Model.Phone" class="text-decoration-none">@Model.Phone</a>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <div class="mb-3">
                            <strong>Địa chỉ:</strong><br>
                            @Model.Address
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.Website))
                    {
                        <div>
                            <strong>Website:</strong><br>
                            <a href="@Model.Website" target="_blank" class="text-decoration-none">@Model.Website</a>
                        </div>
                    }
                </div>
            </div>
            
            <!-- Company Stats -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="fas fa-chart-bar"></i> Thống kê</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Ngành nghề:</span>
                        <span class="fw-bold">@Model.Industry</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Quy mô:</span>
                        <span class="fw-bold">@Model.Size</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Việc làm:</span>
                        <span class="fw-bold">@Model.Jobs.Count</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>