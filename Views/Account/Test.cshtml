@{
    ViewData["Title"] = "Test Login";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Test Login System</h2>
            
            <div class="alert alert-info">
                <h5>Session Information:</h5>
                <p><strong>User Email:</strong> @Context.Session.GetString("UserEmail")</p>
                <p><strong>User Role:</strong> @Context.Session.GetString("UserRole")</p>
                <p><strong>Session ID:</strong> @Context.Session.Id</p>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5>Quick Login Links</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Login" class="mb-3">
                        <input type="hidden" name="Email" value="admin@test.com" />
                        <input type="hidden" name="Password" value="123456" />
                        <button type="submit" class="btn btn-danger">Login as Admin</button>
                    </form>
                    
                    <form method="post" asp-action="Login" class="mb-3">
                        <input type="hidden" name="Email" value="employer@test.com" />
                        <input type="hidden" name="Password" value="123456" />
                        <button type="submit" class="btn btn-success">Login as Employer</button>
                    </form>
                    
                    <form method="post" asp-action="Login" class="mb-3">
                        <input type="hidden" name="Email" value="candidate@test.com" />
                        <input type="hidden" name="Password" value="123456" />
                        <button type="submit" class="btn btn-primary">Login as Candidate</button>
                    </form>
                </div>
            </div>
            
            <div class="mt-3">
                <a href="@Url.Action("Login", "Account")" class="btn btn-secondary">Back to Login Form</a>
                <a href="@Url.Action("Logout", "Account")" class="btn btn-warning">Logout</a>
            </div>
        </div>
    </div>
</div>