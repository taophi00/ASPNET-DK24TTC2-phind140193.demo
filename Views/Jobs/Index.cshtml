@model List<TuyenDungViecLam.Models.Job>
@{
    ViewData["Title"] = "Danh sách việc làm";
    var categories = ViewBag.Categories as List<TuyenDungViecLam.Models.Category>;
    var keyword = ViewBag.Keyword as string;
    var location = ViewBag.Location as string;
    var category = ViewBag.Category as string;
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Filters -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-filter"></i> Bộ lọc tìm kiếm</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Jobs" asp-action="Index" method="get">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Từ khóa</label>
                            <input type="text" name="keyword" value="@keyword" class="form-control" placeholder="Tên công việc, công ty...">
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Địa điểm</label>
                            <input type="text" name="location" value="@location" class="form-control" placeholder="Thành phố, tỉnh...">
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Ngành nghề</label>
                            <select name="category" class="form-select">
                                <option value="">Tất cả ngành nghề</option>
                                @if (categories != null)
                                {
                                    @foreach (var cat in categories)
                                    {
                                        <option value="@cat.Name" selected="@(cat.Name == category)">@cat.Name</option>
                                    }
                                }
                            </select>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search"></i> Tìm kiếm
                        </button>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Job Results -->
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold">Danh sách việc làm</h2>
                <span class="text-muted">Tìm thấy @Model.Count việc làm</span>
            </div>
            
            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var job in Model)
                    {
                        <div class="col-12 mb-4">
                            <div class="card shadow-sm border-0 h-100">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-2 text-center">
                                            <img src="@job.Logo" alt="@job.Company" class="rounded" style="width: 80px; height: 80px; object-fit: cover;">
                                        </div>
                                        <div class="col-md-7">
                                            <h5 class="card-title fw-bold text-primary">@job.Title</h5>
                                            <h6 class="text-muted mb-2">@job.Company</h6>
                                            <p class="card-text">@job.Description.Substring(0, Math.Min(150, job.Description.Length))...</p>
                                            
                                            <div class="d-flex flex-wrap gap-2">
                                                <span class="badge bg-light text-dark">
                                                    <i class="fas fa-map-marker-alt"></i> @job.Location
                                                </span>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-dollar-sign"></i> @job.Salary
                                                </span>
                                                <span class="badge bg-info">
                                                    <i class="fas fa-briefcase"></i> @job.Type
                                                </span>
                                                <span class="badge bg-secondary">@job.Category</span>
                                            </div>
                                        </div>
                                        <div class="col-md-3 text-end">
                                            <p class="text-muted small mb-2">Đăng: @job.PostedDate.ToString("dd/MM/yyyy")</p>
                                            <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.Id" class="btn btn-primary">
                                                Xem chi tiết
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h4>Không tìm thấy việc làm phù hợp</h4>
                    <p class="text-muted">Hãy thử thay đổi từ khóa tìm kiếm hoặc bộ lọc</p>
                </div>
            }
        </div>
    </div>
</div>