@model List<TuyenDungViecLam.Models.Candidate>
@{
    ViewData["Title"] = "Quản lý ứng viên";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h6 class="mb-0"><i class="fas fa-cogs"></i> Menu Quản Trị</h6>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                    <a asp-action="Jobs" class="list-group-item list-group-item-action">
                        <i class="fas fa-briefcase"></i> Quản lý việc làm
                    </a>
                    <a asp-action="Employers" class="list-group-item list-group-item-action">
                        <i class="fas fa-building"></i> Quản lý nhà tuyển dụng
                    </a>
                    <a asp-action="Candidates" class="list-group-item list-group-item-action active">
                        <i class="fas fa-users"></i> Quản lý ứng viên
                    </a>
                    <a asp-action="Applications" class="list-group-item list-group-item-action">
                        <i class="fas fa-file-alt"></i> Quản lý đơn ứng tuyển
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-users"></i> Quản lý ứng viên</h2>
                <div>
                    <button class="btn btn-info me-2">
                        <i class="fas fa-download"></i> Xuất Excel
                    </button>
                    <button class="btn btn-success">
                        <i class="fas fa-plus"></i> Thêm ứng viên
                    </button>
                </div>
            </div>
            
            <!-- Search and Filter -->
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <input type="text" class="form-control" placeholder="Tìm kiếm theo tên, email...">
                        </div>
                        <div class="col-md-3">
                            <select class="form-select">
                                <option>Tất cả kỹ năng</option>
                                <option>React</option>
                                <option>Node.js</option>
                                <option>Python</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select">
                                <option>Tất cả kinh nghiệm</option>
                                <option>Dưới 1 năm</option>
                                <option>1-3 năm</option>
                                <option>3-5 năm</option>
                                <option>Trên 5 năm</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-primary w-100">
                                <i class="fas fa-search"></i> Tìm
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Avatar</th>
                                    <th>Thông tin cá nhân</th>
                                    <th>Vị trí mong muốn</th>
                                    <th>Kinh nghiệm</th>
                                    <th>Kỹ năng</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var candidate in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="@candidate.Avatar" alt="@candidate.Name" 
                                                 class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
                                        </td>
                                        <td>
                                            <strong>@candidate.Name</strong><br>
                                            <small class="text-muted">
                                                <i class="fas fa-envelope"></i> @candidate.Email<br>
                                                <i class="fas fa-phone"></i> @candidate.Phone
                                            </small>
                                        </td>
                                        <td>@candidate.Title</td>
                                        <td>@candidate.Experience</td>
                                        <td>
                                            @foreach (var skill in candidate.Skills.Take(3))
                                            {
                                                <span class="badge bg-secondary me-1">@skill</span>
                                            }
                                            @if (candidate.Skills.Count > 3)
                                            {
                                                <span class="badge bg-light text-dark">+@(candidate.Skills.Count - 3)</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-success">Đã xác thực</span>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <button class="btn btn-outline-primary" title="Xem hồ sơ">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button class="btn btn-outline-info" title="Tải CV">
                                                    <i class="fas fa-download"></i>
                                                </button>
                                                <button class="btn btn-outline-warning" title="Chỉnh sửa">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn btn-outline-danger" title="Khóa tài khoản">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>