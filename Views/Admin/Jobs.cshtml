@model List<TuyenDungViecLam.Models.Job>
@{
    ViewData["Title"] = "Quản lý việc làm";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h6 class="mb-0"><i class="fas fa-cogs"></i> Menu Quản Trị</h6>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                    <a asp-action="Jobs" class="list-group-item list-group-item-action active">
                        <i class="fas fa-briefcase"></i> Quản lý việc làm
                    </a>
                    <a asp-action="Employers" class="list-group-item list-group-item-action">
                        <i class="fas fa-building"></i> Quản lý nhà tuyển dụng
                    </a>
                    <a asp-action="Candidates" class="list-group-item list-group-item-action">
                        <i class="fas fa-users"></i> Quản lý ứng viên
                    </a>
                    <a asp-action="Applications" class="list-group-item list-group-item-action">
                        <i class="fas fa-file-alt"></i> Quản lý đơn ứng tuyển
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-briefcase"></i> Quản lý việc làm</h2>
                <button class="btn btn-success">
                    <i class="fas fa-plus"></i> Thêm việc làm
                </button>
            </div>
            
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Công việc</th>
                                    <th>Công ty</th>
                                    <th>Địa điểm</th>
                                    <th>Lương</th>
                                    <th>Loại</th>
                                    <th>Ngày đăng</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var job in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@job.Logo" alt="@job.Company" 
                                                     class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                                <div>
                                                    <strong>@job.Title</strong><br>
                                                    <small class="text-muted">@job.Category</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@job.Company</td>
                                        <td>@job.Location</td>
                                        <td>@job.Salary</td>
                                        <td>
                                            <span class="badge bg-info">@job.Type</span>
                                        </td>
                                        <td>@job.PostedDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            @if (job.IsActive)
                                            {
                                                <span class="badge bg-success">Đang hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Đã đóng</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.Id" 
                                                   class="btn btn-outline-primary" title="Xem chi tiết">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <button class="btn btn-outline-warning" title="Chỉnh sửa">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                @if (job.IsActive)
                                                {
                                                    <button class="btn btn-outline-secondary" title="Tạm dừng">
                                                        <i class="fas fa-pause"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-outline-success" title="Kích hoạt">
                                                        <i class="fas fa-play"></i>
                                                    </button>
                                                }
                                                <button class="btn btn-outline-danger" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>