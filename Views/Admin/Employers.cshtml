@model List<TuyenDungViecLam.Models.Employer>
@{
    ViewData["Title"] = "Quản lý nhà tuyển dụng";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h6 class="mb-0"><i class="fas fa-cogs"></i> Menu Quản Trị</h6>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                    <a asp-action="Jobs" class="list-group-item list-group-item-action">
                        <i class="fas fa-briefcase"></i> Quản lý việc làm
                    </a>
                    <a asp-action="Employers" class="list-group-item list-group-item-action active">
                        <i class="fas fa-building"></i> Quản lý nhà tuyển dụng
                    </a>
                    <a asp-action="Candidates" class="list-group-item list-group-item-action">
                        <i class="fas fa-users"></i> Quản lý ứng viên
                    </a>
                    <a asp-action="Applications" class="list-group-item list-group-item-action">
                        <i class="fas fa-file-alt"></i> Quản lý đơn ứng tuyển
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-building"></i> Quản lý nhà tuyển dụng</h2>
                <button class="btn btn-success">
                    <i class="fas fa-plus"></i> Thêm nhà tuyển dụng
                </button>
            </div>
            
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Logo</th>
                                    <th>Tên công ty</th>
                                    <th>Ngành nghề</th>
                                    <th>Quy mô</th>
                                    <th>Email</th>
                                    <th>Số việc làm</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employer in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="@employer.Logo" alt="@employer.Name" 
                                                 class="rounded" style="width: 40px; height: 40px; object-fit: cover;">
                                        </td>
                                        <td>
                                            <strong>@employer.Name</strong><br>
                                            <small class="text-muted">@employer.Address</small>
                                        </td>
                                        <td>@employer.Industry</td>
                                        <td>@employer.Size</td>
                                        <td>@employer.Email</td>
                                        <td>
                                            <span class="badge bg-primary">@employer.Jobs.Count việc làm</span>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <button class="btn btn-outline-primary" title="Xem chi tiết">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button class="btn btn-outline-warning" title="Chỉnh sửa">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn btn-outline-success" title="Phê duyệt">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                                <button class="btn btn-outline-danger" title="Khóa tài khoản">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>