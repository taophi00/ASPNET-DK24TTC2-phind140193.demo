@model List<TuyenDungViecLam.Models.Application>
@{
    ViewData["Title"] = "Quản lý đơn ứng tuyển";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h6 class="mb-0"><i class="fas fa-cogs"></i> Menu Quản Trị</h6>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                    <a asp-action="Jobs" class="list-group-item list-group-item-action">
                        <i class="fas fa-briefcase"></i> Quản lý việc làm
                    </a>
                    <a asp-action="Employers" class="list-group-item list-group-item-action">
                        <i class="fas fa-building"></i> Quản lý nhà tuyển dụng
                    </a>
                    <a asp-action="Candidates" class="list-group-item list-group-item-action">
                        <i class="fas fa-users"></i> Quản lý ứng viên
                    </a>
                    <a asp-action="Applications" class="list-group-item list-group-item-action active">
                        <i class="fas fa-file-alt"></i> Quản lý đơn ứng tuyển
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-file-alt"></i> Quản lý đơn ứng tuyển</h2>
                <div>
                    <button class="btn btn-info">
                        <i class="fas fa-download"></i> Xuất báo cáo
                    </button>
                </div>
            </div>
            
            <!-- Filter -->
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <select class="form-select">
                                <option>Tất cả trạng thái</option>
                                <option>Chờ duyệt</option>
                                <option>Đã chấp nhận</option>
                                <option>Đã từ chối</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <input type="date" class="form-control" placeholder="Từ ngày">
                        </div>
                        <div class="col-md-3">
                            <input type="date" class="form-control" placeholder="Đến ngày">
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-primary w-100">
                                <i class="fas fa-filter"></i> Lọc
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Ứng viên</th>
                                    <th>Vị trí ứng tuyển</th>
                                    <th>Công ty</th>
                                    <th>Ngày ứng tuyển</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var application in Model)
                                {
                                    <tr>
                                        <td>
                                            <div>
                                                <strong>Ứng viên #@application.CandidateId</strong><br>
                                                <small class="text-muted">ID: @application.Id</small>
                                            </div>
                                        </td>
                                        <td>
                                            <strong>Việc làm #@application.JobId</strong>
                                        </td>
                                        <td>Công ty liên quan</td>
                                        <td>@application.AppliedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            @switch (application.Status)
                                            {
                                                case TuyenDungViecLam.Models.ApplicationStatus.Pending:
                                                    <span class="badge bg-warning">Chờ duyệt</span>
                                                    break;
                                                case TuyenDungViecLam.Models.ApplicationStatus.Accepted:
                                                    <span class="badge bg-success">Đã chấp nhận</span>
                                                    break;
                                                case TuyenDungViecLam.Models.ApplicationStatus.Rejected:
                                                    <span class="badge bg-danger">Đã từ chối</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <button class="btn btn-outline-primary" title="Xem chi tiết">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                @if (application.Status == TuyenDungViecLam.Models.ApplicationStatus.Pending)
                                                {
                                                    <button class="btn btn-outline-success" title="Chấp nhận">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                    <button class="btn btn-outline-danger" title="Từ chối">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                }
                                                <button class="btn btn-outline-info" title="Gửi email">
                                                    <i class="fas fa-envelope"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>