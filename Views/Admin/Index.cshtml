@{
    ViewData["Title"] = "Trang quản trị";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h6 class="mb-0"><i class="fas fa-cogs"></i> Menu Quản Trị</h6>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-action="Index" class="list-group-item list-group-item-action active">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                    <a asp-action="Jobs" class="list-group-item list-group-item-action">
                        <i class="fas fa-briefcase"></i> Quản lý việc làm
                    </a>
                    <a asp-action="Employers" class="list-group-item list-group-item-action">
                        <i class="fas fa-building"></i> Quản lý nhà tuyển dụng
                    </a>
                    <a asp-action="Candidates" class="list-group-item list-group-item-action">
                        <i class="fas fa-users"></i> Quản lý ứng viên
                    </a>
                    <a asp-action="Applications" class="list-group-item list-group-item-action">
                        <i class="fas fa-file-alt"></i> Quản lý đơn ứng tuyển
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-10">
            <h2 class="mb-4"><i class="fas fa-tachometer-alt"></i> Dashboard Quản Trị</h2>
            
            <!-- Stats Cards -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>@ViewBag.TotalJobs</h4>
                                    <p class="mb-0">Việc làm</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-briefcase fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>@ViewBag.TotalEmployers</h4>
                                    <p class="mb-0">Nhà tuyển dụng</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-building fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>@ViewBag.TotalCandidates</h4>
                                    <p class="mb-0">Ứng viên</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-users fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>@ViewBag.TotalApplications</h4>
                                    <p class="mb-0">Đơn ứng tuyển</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-file-alt fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Quick Actions -->
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5><i class="fas fa-tasks"></i> Thao tác nhanh</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a asp-action="Jobs" class="btn btn-outline-primary">
                                    <i class="fas fa-briefcase"></i> Quản lý việc làm
                                </a>
                                <a asp-action="Employers" class="btn btn-outline-success">
                                    <i class="fas fa-building"></i> Quản lý nhà tuyển dụng
                                </a>
                                <a asp-action="Candidates" class="btn btn-outline-info">
                                    <i class="fas fa-users"></i> Quản lý ứng viên
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5><i class="fas fa-chart-line"></i> Thống kê hệ thống</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success"></i> 
                                    Việc làm đang hoạt động: <strong>@ViewBag.TotalJobs</strong>
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-clock text-warning"></i> 
                                    Đơn ứng tuyển chờ duyệt: <strong>@ViewBag.TotalApplications</strong>
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-user-check text-info"></i> 
                                    Tài khoản đã xác thực: <strong>@(ViewBag.TotalEmployers + ViewBag.TotalCandidates)</strong>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>